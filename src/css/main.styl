html
  height 100%

body
  margin 0
  padding 0
  height 100%

#map > div > div, #map > div
  height 100%


#map
  position relative
  min-height 50%
  height 100%
  z-index 0

.location-button
  position absolute
  bottom 90px
  right 20px
  padding 8px
  font-size 18px
  z-index 1

.search-button
  position absolute
  bottom 40px
  right 20px
  padding 8px
  font-size 18px
  z-index 1

.park-show
  position relative
  padding 4px 4px
  margin 0
  background-color white

  .header
    height 20px
    line-height 14px
    margin 0
    header 0
    padding 0

    a
      color black
      text-decoration none

  .body
    line-height 14px
    margin 0
    header 0
    padding 0
    margin-bottom 4px

  img
    width 100%
    margin-bottom 4px

  span
    font-size 11px
    margin 0
    padding 0

  .number
    padding-right 10px

  .name
    height 12px
    font-size 12px
    line-height 14px
    font-weight bold

  .distance
    font-size 8px
    line-height 14px
    float right
    position relative
    top 0px
    right 4px

  .fee
    margin-left 4px
    margin-right 4px
    line-height 12px

  .marker
    display block
    position absolute
    height 44px
    width 66px
    bottom 20px
    right 10px

.park-list
  position relative
  height 108px
  padding 4px 4px
  margin 0
  background-color white

  .header
    height 20px
    line-height 14px
    margin 0
    header 0
    padding 0

    a
      color black
      text-decoration none


  :nth-child(even)
    background-color #eeeef3

  .body
    height 88px
    line-height 14px
    margin 0
    header 0
    padding 0

  img
    clear left
    height 88px
    width 117px
    float left
    margin-right 6px

  span
    font-size 11px
    margin 0
    padding 0

  .number
    padding-right 10px

  .name
    height 12px
    font-size 12px
    line-height 14px
    font-weight bold

  .distance
    font-size 8px
    line-height 14px
    float right
    position relative
    top 0px
    right 4px

  .fee
    line-height 12px

  .marker
    display block
    position absolute
    height 44px
    width 66px
    bottom 20px
    right 10px

.help
  font-size 14px
  margin 8px

.parks
  height 300px
  overflow scroll
  -webkit-overflow-scrolling touch

.fee-overlay
  h1
    position relative
    top -14px
    left -22px
    width 40px
    padding 4px
    margin 0
    font-size 10px
    border solid 1px #000
    text-align center
    font-weight normal
    background-color rgba(250,100,100,0.8)

.modal
  position fixed
  overflow scroll
  background-color rgba(0,0,0,0.4)
  top 0
  right 0
  left 0
  bottom 0
  z-index 3


  .modal-main
    position relative
    margin 20px
    top 0
    right 0
    bottom 0
    left 0
    height auto
    background-color #fff
    -webkit-overflow-scrolling touch
